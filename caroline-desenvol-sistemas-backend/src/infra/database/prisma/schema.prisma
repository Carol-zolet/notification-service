generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Lê do seu .env!
}

// O nosso "espelho" da Entidade de Domínio
model Notification {
  id             String    @id @default(uuid())
  recipientEmail String
  recipientName  String
  channel        String    // Mapeia o 'EMAIL' | 'SMS'
  subject        String
  body           String
  scheduleAt     DateTime
  sourceSystem   String
  sentAt         DateTime? // O '?' indica que é nulo
  createdAt      DateTime  @default(now())
}