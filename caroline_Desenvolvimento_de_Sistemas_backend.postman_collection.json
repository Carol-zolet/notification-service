{
  "info": {
    "name": "Sistema de Notificações - API",
    "_postman_id": "notification-service-collection",
    "description": "Collection para testes do microsserviço de notificações",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/health",
          "host": ["{{base_url}}"],
          "path": ["api", "health"]
        },
        "description": "Verifica se o servidor está rodando"
      },
      "response": []
    },
    {
      "name": "Agendar Notificação - Envio Imediato",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"usuario@exemplo.com\",\n  \"subject\": \"Notificação Imediata\",\n  \"message\": \"Esta notificação será processada no próximo ciclo do worker (até 60s)\",\n  \"scheduledFor\": \"{{current_time}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/notifications/schedule",
          "host": ["{{base_url}}"],
          "path": ["api", "notifications", "schedule"]
        },
        "description": "Agenda uma notificação para ser enviada imediatamente"
      },
      "response": []
    },
    {
      "name": "Agendar Notificação - Futuro",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"teste@exemplo.com\",\n  \"subject\": \"Notificação Futura\",\n  \"message\": \"Esta notificação será enviada em 5 minutos\",\n  \"scheduledFor\": \"2025-11-04T10:00:00Z\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/notifications/schedule",
          "host": ["{{base_url}}"],
          "path": ["api", "notifications", "schedule"]
        },
        "description": "Agenda uma notificação para envio futuro"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "current_time",
      "value": "{{}}",
      "type": "string"
    }
  ]
}
