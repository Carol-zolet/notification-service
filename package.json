{
	"name": "microsservicos-alerta",
	"version": "1.0.0",
	"private": true,
	"type": "commonjs",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"test": "jest --coverage",
		"test:watch": "jest --watch",
		"test:unit": "jest --testPathPattern='\\.test\\.ts$' --testPathIgnorePatterns='e2e|integration'",
		"test:integration": "jest --testPathPattern='integration'",
		"test:e2e": "jest --testPathPattern='e2e'",
		"test:ci": "jest --ci --coverage --maxWorkers=2 --no-cache",
		"test:verbose": "jest --verbose --coverage",
		"test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
		"lint": "eslint . --ext .ts --max-warnings 0",
		"lint:fix": "eslint . --ext .ts --fix",
		"format": "prettier --write \"src/**/*.{ts,json,md}\"",
		"format:check": "prettier --check \"src/**/*.{ts,json,md}\"",
		"typecheck": "tsc --noEmit",
		"quality": "npm run lint && npm run format:check && npm run typecheck",
		"db:migrate": "prisma migrate dev",
		"db:migrate:deploy": "prisma migrate deploy",
		"db:generate": "prisma generate",
		"db:studio": "prisma studio"
	},
	"dependencies": {
		"@prisma/client": "6.19.0",
		"@sendinblue/client": "^3.3.1",
		"@types/express": "^4.17.25",
		"@types/multer": "^1.4.11",
		"@types/node-cron": "^3.0.11",
		"@types/nodemailer": "^6.4.14",
		"axios": "^1.13.2",
		"cors": "^2.8.5",
		"csv-parser": "^3.2.0",
		"dotenv": "^17.2.3",
		"express": "^4.19.2",
		"multer": "^1.4.5-lts.1",
		"node-cron": "^3.0.3",
		"nodemailer": "^7.0.10",
		"pdf-lib": "^1.17.1",
		"pdf-parse": "^2.4.5",
		"pdfjs-dist": "^2.16.105",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@types/cors": "^2.8.19",
		"@types/jest": "^29.5.14",
		"@types/node": "^24.10.1",
		"@types/supertest": "^6.0.3",
		"jest": "^29.7.0",
		"prisma": "6.19.0",
		"supertest": "^6.3.4",
		"ts-jest": "^29.4.5",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.4"
	},
	"prisma": {
		"seed": "ts-node prisma/seed.ts"
	}
}
